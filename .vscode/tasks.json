{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Installing Php Extensions and dependencies...",
      "type": "shell",
      "command": "code-server --install-extension cweijan.vscode-mysql-client2 --install-extension bmewburn.vscode-intelephense-client --install-extension devsense.phptools-vscode",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": { "runOn": "folderOpen" }
    },
    {
      "label": "Running your app...",
      "type": "shell",
      "command": "php -S localhost:8000 -t ./*/",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": { "runOn": "folderOpen" }
    }
  ]
}
